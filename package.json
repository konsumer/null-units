{
  "scripts":  {
    "start": "npx -y npm-run-all -p start:web watch",
    "start:web": "npx -y live-server docs",
    "build": "npx -y npm-run-all -p build:*",
    "build:lpf": "make docs/units/lpf.wasm",
    "build:mooglpf": "make docs/units/mooglpf.wasm",
    "build:hpf": "make docs/units/hpf.wasm",
    "build:wavetable": "make docs/units/wavetable.wasm",
    "build:copy": "make docs/units/copy.wasm",
    "build:static": "make docs/units/static.wasm",
    "build:gain": "make docs/units/gain.wasm",
    "build:plate": "make docs/units/plate.wasm",
    "build:phaser": "make docs/units/phaser.wasm",
    "build:flanger": "make docs/units/flanger.wasm",
    "build:chorus": "make docs/units/chorus.wasm",
    "build:distortion": "make docs/units/distortion.wasm",
    "build:compressor": "make docs/units/compressor.wasm",
    "build:tremelo": "make docs/units/tremelo.wasm",
    "build:bitcrusher": "make docs/units/bitcrusher.wasm",
    "build:autowah": "make docs/units/autowah.wasm",
    "build:wavefolder": "make docs/units/wavefolder.wasm",
    "build:ringmod": "make docs/units/ringmod.wasm",
    "build:delay": "make docs/units/delay.wasm",
    "build:bbd": "make docs/units/bbd.wasm",
    "build:tr808": "make docs/units/tr808.wasm",
    "build:adsr": "make docs/units/adsr.wasm",
    "native": "cd native && cmake -B build -G Ninja && cmake --build build",
    "watch": "npx -y nodemon -w units -e 'c h' --exec 'npm run build'",
    "clean": "npx -y rimraf docs/units/*.wasm native/build"
  }
}
